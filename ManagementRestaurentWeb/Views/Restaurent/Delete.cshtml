@model ManagementRestaurentWeb.Models.ModelDTO.RestaurantDTO.RetaurantDTO
@{
    ViewData["Title"] = "Delete Restaurent";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="p-5"></div>
<form asp-action="Delete">
    <div class="container border p-3">
        <h1 class="text-primary"><i class="bi bi-trash-fill"></i>  Delete Restaurent</h1>

        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="col-2 pt-3">
                <label asp-for="Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pt-3">
                <input asp-for="Name" disabled class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-2 pt-3">
                <label asp-for="Description" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pt-3">
                <textarea asp-for="Description" disabled class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="col-2 pt-3">
                <label asp-for="Rate" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pt-3">
                <input asp-for="Rate" disabled class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="col-2 pt-3">
                <label asp-for="Address" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pt-3">
                <input asp-for="Address" disabled class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="col-2 pt-3">
                <label asp-for="Image" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pt-3">
                <input asp-for="Image" disabled class="form-control" />
                <img class="w-50" style="border-radius: 20px;" src="~/Img/@Model.Image" alt="Photo" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>


            <div class="col-2 offset-8 pt-3">
                <a asp-action="IndexRestaurent" asp-controller="Restaurent" class="btn-outline-primary btn form-control"><i class="bi bi-arrow-return-left"></i>  Back to list</a>
            </div>
            <div class="col-2 pt-3">
                <input type="submit" value="Delete" class="btn-outline-danger btn form-control" />
            </div>
        </div>
    </div>
</form>

