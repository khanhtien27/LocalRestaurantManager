@model IEnumerable<ManagementRestaurentWeb.Models.ModelDTO.RestaurantDTO.RetaurantDTO>

@{
    ViewData["Title"] = "IndexRestaurent";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="p-5"></div>
<h1><i class="bi bi-card-list"></i>  Restaurent</h1>

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-12 text-end">
                <a asp-controller="Restaurent" asp-action="Create" class="btn btn-outline-success"><i class="bi bi-plus-square-fill"></i>  Add New Restaurent</a>
            </div>

        </div>
    </div>

    <div class="card-body p-3">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col" style="width:150px;" class="text-center">Restaurent's name'</th>
                    <th scope="col" style="width:200px;" class="text-center">Description</th>
                    <th scope="col" style="width:150px;" class="text-center">Link</th>
                    <th scope="col" style="width:200px;" class="text-center">Address</th>
                    <th scope="col" style="width:30px;" class="text-center">Rate</th>
                    <th scope="col" style="width:250px;" class="text-center">Image</th>
                    <th scope="col" class="text-center"></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row" class="text-center align-middle">@item.Name</th>
                        <td class="text-center align-middle">@item.Description</td>
                        <td class="text-center align-middle">
                            <a href="#">@item.Slug</a>
                        </td>
                        <td class="text-center align-middle">@item.Address</td>
                        <td class="text-center align-middle">@item.Rate</td>
                        <td class="text-center"><img class="d-block w-100" style="border-radius: 20px;" src="~/Img/@item.Image" alt="Photo" /></td>
                        <td class="text-center align-middle">
                            <a asp-controller="Restaurent" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-outline-warning"><i class="bi bi-box-arrow-in-up"></i>  Update</a>
                            <a asp-controller="Restaurent" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-outline-danger"> <i class="bi bi-trash-fill"></i>  Delete</a>
                            <a asp-controller="Product" asp-action="IndexID" asp-route-Id="@item.Id" class="btn btn-outline-success"> <i class="bi bi-card-list"></i> List Product</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

