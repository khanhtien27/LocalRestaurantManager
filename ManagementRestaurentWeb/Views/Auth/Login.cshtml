@model ManagementRestaurentWeb.Models.ModelDTO.LoginRequestDTO
<div class="p-5"></div>
<h1>Login</h1>
<form method="post">
    <div class="container border p-4 pt-5">
        <div class="row text-center">
            <h1>Login</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>

        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input asp-for="UserNam" type="text" class="form-control" placeholder="UseName..." />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Password" type="text" class="form-control" placeholder="Password..." />
            </div>
            <div class="col-6 offset-3 pb-2">
                <button type="submit" value="Submit" class="form-control btn-success">Login</button>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}