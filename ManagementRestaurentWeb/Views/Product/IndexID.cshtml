@model IEnumerable<ManagementRestaurentWeb.Models.ModelDTO.ProductDTO.ProductDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="p-5"></div>
<h1><i class="bi bi-card-list"></i> List Product</h1>

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-bg-danger">
                    List Product of @Model.Select(i => i.Restaurent.Name).FirstOrDefault() Restaurent
                    </strong>
            </div>

            <div class="col-md-6 text-end">
                <a asp-controller="Product" asp-action="Create" asp-route-Id="@Model.Select(i => i.Restaurent.Id).FirstOrDefault()" class="btn btn-outline-success"> <i class="bi bi-plus-square-fill"></i> Add Product</a>
            </div>

        </div>
    </div>

    <div class="card-body p-3">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col" style="width:150px;" class="text-center">Product's name'</th>
                    <th scope="col" style="width:200px;" class="text-center">Description</th>
                    <th scope="col" style="width:150px;" class="text-center">Link</th>
                    <th scope="col" style="width:200px;" class="text-center">Status</th>
                    <th scope="col" style="width:300px;" class="text-center">Image</th>
                    <th scope="col" class="text-center"></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row" class="text-center align-middle">@item.Name</th>
                        <td class="text-center align-middle">@item.Description</td>
                        <td class="text-center align-middle">
                            <a href="#">@item.Slug</a>
                        </td>
                        <td class="text-center align-middle">@item.Status</td>
                        <td class="text-center"><img class="d-block w-100" style="border-radius: 20px;" src="~/Img/@item.Image" alt="Photo" /></td>
                        <td class="text-center align-middle">
                            <a asp-controller="Product" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-outline-warning"><i class="bi bi-box-arrow-in-up"></i> Update</a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-outline-danger"><i class="bi bi-trash-fill"></i> Delete</a>
                            <a asp-controller="Category" asp-action="Index" asp-route-Id="@item.Id" class="btn btn-outline-danger"><i class="bi bi-card-list"></i>  List Category</a>
                        </td>
                    </tr>
                }
            </tbody> 
        </table>
        <div class="col-2 offset-10 pt-3">
            <a asp-action="IndexRestaurent" asp-controller="Restaurent" class="btn-outline-primary btn form-control">Back to list restaurent</a>
        </div>
    </div>

</div>

