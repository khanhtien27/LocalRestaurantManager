@model IEnumerable<ManagementRestaurentWeb.Models.ModelDTO.ProductDTO.ProductDTO>

@using Microsoft.AspNetCore.Components;

@{
    ViewData["Title"] = "Product Page";
}
<img class="d-block w-100 pb-3" src="~/Img/@Model.FirstOrDefault().Restaurent.Image" alt="photo" />

<div class="row" style="--bs-gutter-x:0">
    @foreach (var item in Model)
    {
        <div class="card-group m-3 align-content-center" style="width: 21rem;">
            <img class="card-img-top rounded" width="200" height="200" src="~/Img/@item.Image" alt="Card image cap">
            <div class="card-body">
                <div class="row">
                    <h5 class="card-title col-10"><b>@item.Name</b></h5>
                    <p class="col-2">
                        @if(item.Status ==1)
                        {
                            <i class="bi bi-layout-sidebar-inset-reverse text-success" style="font-size:x-large"></i>
                        }
                        else
                        {
                            <i class="bi bi-layout-sidebar-inset text-danger" style="font-size:x-large"></i>
                        }
                    </p>
                </div>
                
                <p class="card-text">@item.Description</p>
                <a asp-action="CateList" asp-controller="Home" asp-route-Id="@item.Id" class="btn btn-primary col-12">Detail</a>
            </div>
        </div>
    }
</div>

